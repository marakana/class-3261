<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="PrefsTheme" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>
    
    <style name="yambaText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="yambaText.Medium" parent="yambaText">
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="yambaText.Bold" parent="yambaText">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="yambaText.Large">
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="yambaButton" parent="yambaText.Medium">
        <item name="android:padding">@dimen/buttonPad</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

</resources>